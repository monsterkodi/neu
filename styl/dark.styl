bodyColor           = #ff0000
bgColor             = #000000
separatorColor      = #0e0e0e
frameColor          = #111111
scrollHoverColor    = #b00
titleRedColor       = #f00
titleColor          = #222
scrollColor         = #222
textBlurColor       = #444
textActiveColor     = #999
textFocusColor      = #fff

winbuttonBlurColor   = frameColor
winbuttonFocusColor  = textBlurColor
winbuttonHoverColor  = textActiveColor
winbuttonActiveColor = textFocusColor

frameWidth          = 6px
frameRadius         = 10px
borderRadius        = 10px
frameBorder         = frameWidth solid frameColor
bodyBorder          = 1px solid #222

