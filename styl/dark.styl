#titlebar
    background                  frameColor
    border-top-left-radius      frameRadius
    border-top-right-radius     frameRadius
    overflow hidden

.titlebar-name
    color               textActiveColor

.titlebar-dot
    color               titleColor

#titlebar .winbutton
    &:active
        background-color titleRedColor
        &.gray
            background-color titleColor
            
#titlebar .winbutton.gray
    color               winbuttonBlurColor
#titlebar .winbutton svg
    animation           6000ms ease-in-out winbuttonFadeStrokeOut
    stroke-width        2px
    stroke              winbuttonBlurColor

#titlebar:hover .winbutton.gray            
    color               winbuttonFocusColor
#titlebar:hover .winbutton svg
    animation           300ms ease-in-out winbuttonFadeStroke
    stroke              winbuttonFocusColor
    
#titlebar .winbutton.gray:hover    
    color               winbuttonHoverColor
#titlebar .winbutton:hover svg    
    stroke              winbuttonHoverColor
        
#titlebar .winbutton.gray:active
    color               winbuttonActiveColor
#titlebar .winbutton:active svg    
    stroke              winbuttonActiveColor

