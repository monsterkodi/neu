@keyframes winbuttonFadeStroke
    0%
        stroke          winbuttonBlurColor
    100%  
        stroke          winbuttonFocusColor

@keyframes winbuttonFadeStrokeOut
    0%
        stroke          winbuttonFocusColor
    100%  
        stroke          winbuttonBlurColor
        
    
    