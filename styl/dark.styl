bgColor             = #000000
bodyColor           = #000000
separatorColor      = #0e0e0e
frameColor          = #111111
scrollHoverColor    = #b00
titleRedColor       = #f00
titleColor          = #222
scrollColor         = #222
textBlurColor       = #444
textActiveColor     = #999
textFocusColor      = #fff

winbuttonActiveColor = textFocusColor
winbuttonHoverColor  = textActiveColor
winbuttonFocusColor  = textBlurColor
winbuttonBlurColor   = titleColor

frameWidth          = 6px
frameRadius         = 0px
borderRadius        = 0px
frameBorder         = frameWidth solid frameColor
bodyBorder          = 1px solid #222

// 0000000     0000000   0000000    000   000  
