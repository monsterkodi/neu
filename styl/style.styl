.popup
    line-height         1.05
    z-index             9999
    position            absolute
    border-radius       3px
    font-family         titlebarFont
    &.titlemenu
        border-top-left-radius   0
        border-top-right-radius  0
    
.popupItem
    padding             4px
    padding-left        2 * frameWidth
    padding-right       2 * frameWidth + 70px
    cursor              pointer
    &.separator
        padding         0
        cursor          default
        border          0
        height          0
        margin-top      6px
        margin-bottom   6px
    &:last-child
        padding-bottom  frameWidth
    &:first-child
        padding-top     frameWidth
        
.popupImage
    position            absolute
    left                0

.popupCombo
    pointer-events      none
    position            absolute
    right               2 * frameWidth
    
