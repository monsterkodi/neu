.menu
    line-height         1.05
    height              titlebarHeight
    pointer-events      auto
    flex                0 0 0
    display             flex
    flex-direction      row
    
.menuItem
    cursor              pointer
    padding-left        10px
    padding-right       10px
    padding-top         7px
    display             inline-block
    height              titlebarHeight
    overflow            visible
            
// 00000000    0000000   00000000   000   000  00000000
// 000   000  000   000  000   000  000   000  000   000
