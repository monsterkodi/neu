#titlebar
    display             flex
    flex-direction      row
    height              titlebarHeight
    box-sizing          border-box
    font-family         titlebarFont
    white-space         nowrap
    cursor              pointer

.titlebar-title
    display             inline-block
    flex-direction      row
    flex                1 1 0px
    padding-top         7px
    padding-left        10px
    padding-right       10px
    font                titlebarFont
    
.titlebar-dot
    display             inline-block
    vertical-align      top
    padding-left        9px
    padding-right       9px
    margin-top          -1px

#titlebar .winicon img
    pointer-events      all
    padding-left        6px
    padding-top         3px
    width               22px
    height              22px
    
#titlebar .winbutton
    flex                0 0 titlebarHeight*1.3
    display             inline-block
    text-align          center
    vertical-align      bottom
    font-size           18px
    padding-top         2px
    pointer-events      auto
    cursor              grab
    &.minimize
        padding-top     5px

#titlebar .topframe
    height              2px
    position            absolute
    left                0
    top                 0
    right               135px
        
